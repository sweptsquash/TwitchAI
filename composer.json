{
    "name": "sweptsquash/twitchai",
    "description": "Twitch Stream AI Assistant Manager",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "laravel",
        "openai",
        "ai"
    ],
    "require": {
        "php": "^8.2",
        "based/momentum-trail": "^0.2.2",
        "betterapp/laravel-db-encrypter": "dev-master",
        "doctrine/dbal": "^3.7.2",
        "guzzlehttp/guzzle": "^7.8.1",
        "inertiajs/inertia-laravel": "^0.6.11",
        "laravel/framework": "^10.34.2",
        "laravel/sanctum": "^3.3.2",
        "laravel/tinker": "^2.8.2",
        "nativephp/electron": "dev-main",
        "openai-php/client": "^0.7.10",
        "symfony/http-client": "^6.4.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.13.0",
        "ergebnis/composer-normalize": "^2.39.0",
        "fakerphp/faker": "^1.23.0",
        "laravel/pint": "^1.13.6",
        "laravel/sail": "^1.26.2",
        "mockery/mockery": "^1.6.6",
        "nunomaduro/collision": "^7.10.0",
        "phpro/grumphp": "^1.16",
        "phpunit/phpunit": "^10.5.1",
        "spatie/laravel-ignition": "^2.3.1"
    },
    "repositories": {
        "betterapp/laravel-db-encrypter": {
            "type": "git",
            "url": "https://github.com/sweptsquash/laravel-db-encrypter"
        },
        "nativephp/electron": {
            "type": "git",
            "url": "https://github.com/sweptsquash/electron-ci"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "App\\": "src/App",
            "Database\\Seeders\\": "database/seeders/",
            "Domain\\": "src/Domain",
            "Support\\": "src/Support"
        },
        "files": [
            "src/Support/Helpers/Helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpro/grumphp": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php artisan trail:generate"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "doc:models": "php artisan ide-helper:models --dir=\"src/Domain/**/Models\" -N",
        "lint": "./vendor/bin/pint",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=512M",
        "test": "php artisan test --parallel --no-coverage --recreate-databases",
        "test:lint": "./vendor/bin/pint --test"
    }
}
